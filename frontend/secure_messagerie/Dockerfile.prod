# frontend/secure_messagerie/Dockerfile.prod

# Étape build
FROM node:18-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
# IMPORTANT : le .env.production doit être présent à la racine du projet
RUN npm run build

# Étape runtime
FROM nginx:1.23-alpine
# on remplace la conf par la nôtre (SPA fallback)
COPY nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=builder /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx","-g","daemon off;"]
